<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_home"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.inceptive.navigation.EmployeeHome">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/homelinearLayout">

        <include layout="@layout/header" />


        <FrameLayout
            android:id="@+id/emphome_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


        </FrameLayout>
    </LinearLayout>





    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F2FFFFFF"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_gravity="left"
        android:id="@+id/homerelativeLayout"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:id="@+id/homelinearLayout2"
            android:background="@drawable/nav31">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="-15dp"
                app:srcCompat="@drawable/place_holder"
                android:id="@+id/main_imageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inceptive"
                android:textSize="23dp"
                android:id="@+id/nmtxt"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:layout_marginLeft="-133dp"
                android:layout_marginTop="140dp"
                android:textColor="@color/white"/>


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@string/font_family_medium"
                android:text="Consulting"
                android:textSize="23dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/nmlst"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="left"

            android:id="@+id/homelinearLayout3"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">




            <LinearLayout
                android:layout_marginTop="68dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="70dp"
                android:paddingBottom="-5dp"
               >

                <ImageView

                    android:layout_width="32dp"
                    app:srcCompat="@drawable/house"
                    android:layout_height="37dp"
                    android:fontFamily="@string/font_family_medium"
                    android:layout_marginLeft="-0.5dp"
                    android:layout_marginTop="-5dp"/>

                <TextView
                android:layout_width="wrap_content"
                android:id="@+id/dashboard"
                android:text="Home"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="font_family_medium"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp"
                android:layout_marginTop="-25dp">


            <ImageView

                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/lvapl"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/applyleave"
                android:text="Apply Leave"
                android:textSize="16dp"
                android:fontFamily="font_family_medium"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>



            <LinearLayout
                android:layout_marginTop="-5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">


            <ImageView

                android:layout_width="30dp"
                android:layout_height="27dp"
                android:src="@drawable/stslv" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/leavestatus"
                android:text="Leave Status"
                android:textSize="16dp"
                android:fontFamily="font_family_medium"
                android:textColor="@color/black"
                android:layout_marginLeft="22dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp"
                android:layout_marginTop="-20dp">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/logout_black" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/logout"
                android:text="Logout"
                android:textSize="16dp"
                android:layout_marginLeft="22dp"
                android:fontFamily="font_family_medium"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />


        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
