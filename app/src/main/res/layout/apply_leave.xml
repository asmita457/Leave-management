<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    app:cardElevation="5dp"
    android:background="@color/white"
   >
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
           >

     <LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout1">

    <TextView
        android:text="From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from_date"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:fontFamily="@string/font_family_medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:inputType="none"
        android:ems="10"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        android:drawableRight="@drawable/ic_action_calendar"
        android:background="@drawable/orange_edittext"
        android:id="@+id/edtfrom_Date"
        android:hint="Select Date"
        android:layout_marginLeft="60dp"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:id="@+id/layout2"
        android:layout_marginTop="10dp">

        <TextView
            android:text="To:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_date"
            android:textSize="18dp"

            android:textColor="@color/colorPrimary"
            android:fontFamily="@string/font_family_medium"
           />

        <TextView
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:inputType="none"
            android:ems="10"
            android:textColor="@color/black"
            android:layout_marginLeft="81dp"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:drawableRight="@drawable/ic_action_calendar"
            android:background="@drawable/orange_edittext"
            android:id="@+id/edtto_Date"
            android:hint="Select Date"
           />

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layout2"
                android:id="@+id/layout3"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Leave Type:"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leave_type"
                    android:textSize="18dp"

                    android:fontFamily="@string/font_family_medium"
                   />

                <Spinner
                    android:layout_marginTop="3dp"
                    android:layout_width="225dp"
                    android:layout_height="40dp"
                    android:id="@+id/leaveType_spinner"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/orange_edittext"
                    android:textAlignment="center"
                    android:padding="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutbutton"
                android:layout_below="@+id/layout3"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Leave count:"
                    android:textSize="18dp"

                    android:layout_marginTop="10dp"
                    android:fontFamily="@string/font_family_medium"
                    android:id="@android:id/text2"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="225dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/black"
                    android:hint="No of leave count"
                    android:textSize="18dp"
                    android:id="@+id/counttextview"
                   android:layout_marginLeft="107dp"
                    android:layout_marginTop="-22dp"
                    android:background="@drawable/orange_edittext"
                 />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layoutbutton"
                android:id="@+id/layout4"
                android:layout_marginTop="10dp">


            <TextView
                android:text="Reason:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reason"
                android:textSize="18dp"

                android:fontFamily="@string/font_family_medium"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-10dp"/>




            <EditText
                android:layout_width="225dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/orange_edittext"
                android:id="@+id/reason_desc"
                android:hint="Description"
                android:maxLength="50" />

        </LinearLayout>





