<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:textCursorDrawable="@drawable/cursur_color"

    android:gravity="center">
    <!--android:layoutAnimation="@anim/layout_animation_fall_down"-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="From Date">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/fromtextinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@drawable/hint_selector"
            android:hint="From Date"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/edtfrom_Date"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text=""
        android:gravity="start"
        android:padding="5dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:hint="From Date"
        android:layout_marginTop="10dp"
       />
    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_marginTop="-20dp"
        android:background="@android:color/darker_gray" />

<TextView
    android:id="@+id/edtto_Date"
    android:layout_marginTop="30dp"
    android:layout_width="270dp"
    android:layout_height="50dp"
    android:hint="To Date"
    android:textSize="16dp"
android:padding="5dp"
    android:textColor="@color/black"
    android:gravity="start"
    />
    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_marginTop="-20dp"

        android:background="@android:color/darker_gray" />

    <Spinner
        android:layout_marginTop="15dp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/leaveType_spinner"
        android:gravity="start"
        android:layout_marginLeft="-10dp"
        android:textAlignment="center"
        android:padding="5dp"/>
    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_marginTop="-15dp"

        android:background="@android:color/darker_gray" />

<TextView
    android:id="@+id/counttextview"
    android:layout_width="270dp"
    android:layout_height="50dp"
    android:hint="No Of Leave Count"
    android:padding="5dp"
    android:textSize="16dp"
    android:gravity="start"
    android:textColor="@color/black"
    android:layout_marginTop="18dp"/>

    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_marginTop="-20dp"

        android:background="@android:color/darker_gray" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:padding="20dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ  "
            android:textSize="16dp"
            android:inputType="textMultiLine"
            android:gravity="start"
android:background="@drawable/loginbutton"
           android:textAlignment="gravity"
            android:paddingLeft="5dp"
            android:id="@+id/reason_desc"
            android:hint="Reason"
            android:maxLength="50" />


    </android.support.design.widget.TextInputLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"

        android:id="@+id/apply_btn"
        android:theme="@style/MyButton"
       android:layout_marginTop="-10dp"
        android:layout_gravity="center"
        android:gravity="center"/>



