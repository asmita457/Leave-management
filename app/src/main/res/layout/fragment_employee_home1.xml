<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:background="@color/white"

    android:layout_height="match_parent"
    android:id="@+id/emphome1_relativeLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.inceptive.fragment.EmployeeHome1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:id="@+id/laylin"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/emphome1_frame"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-56dp"
        android:gravity="center">


        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"

            android:id="@+id/cardView">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pendingcount"
                android:layout_gravity="center"
                android:text=""
                android:layout_marginTop="-30dp"
                android:fontFamily="@string/font_family_medium"
                android:textColor="@color/blck"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Leaves"
                android:textSize="16dp"
                android:layout_marginTop="5dp"

                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:padding="20dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/pendingleave"


                />





        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_height="120dp"
            android:id="@+id/cardView4"
            app:cardElevation="5dp"

            android:layout_gravity="center"
            android:layout_below="@+id/cardView3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text=""
                android:layout_marginTop="-30dp"
                android:fontFamily="@string/font_family_medium"
                android:textColor="@color/blck"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/appliededcount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied Leaves"
                android:textSize="16dp"
                android:layout_marginTop="5dp"

                android:gravity="center"
                android:fontFamily="@string/font_family_medium"
                android:layout_gravity="center"
                android:padding="25dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/appliedleave"
                />



        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/cardvwlayout"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/emphome1_frame">

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/cardView2"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:layout_marginTop="-30dp"
                android:fontFamily="@string/font_family_medium"
                android:textColor="@color/blck"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/approvedcount"/>

            <TextView
                android:id="@+id/approvedleave"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:layout_marginTop="5dp"

                android:padding="20dp"
                android:text="Approved Leaves"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />



        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/cardView3"
            android:layout_height="120dp"
            app:cardElevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejected Leaves"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/rejectedleave"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:layout_marginTop="-30dp"
                android:textSize="18dp"
                android:fontFamily="@string/font_family_medium"
                android:textColor="@color/blck"
                android:id="@+id/rejectedcount"
                android:gravity="center"/>



        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/floating"
        android:id="@+id/floatImage"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        />

