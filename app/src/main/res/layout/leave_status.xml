<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leavestatus_frame"
    android:layout_margin="5dp"

    app:cardElevation="3dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context="com.example.inceptive.fragment.LeaveStatus">

    <LinearLayout
        android:id="@+id/stslinearlayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:id="@+id/linearlay4">


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Status:"
           android:paddingLeft="10dp"
           android:textColor="@color/colorPrimary"
           android:textSize="16dp"
           android:layout_marginBottom="20dp"
           android:fontFamily="@string/font_family_medium"
           android:id="@+id/textView"
           android:layout_below="@+id/reasonstatus"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true" />

       <TextView
           android:text="Status"
           android:textSize="15dp"
           android:padding="5dp"
           android:fontFamily="@string/font_family_medium"
           android:textColor="@color/blck"
           android:layout_marginLeft="15dp"
           android:gravity="start"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:id="@+id/statusleave"
           android:layout_alignBaseline="@+id/textView"
           android:layout_alignBottom="@+id/textView"
           android:layout_alignLeft="@+id/reasonstatus"
           android:layout_alignStart="@+id/reasonstatus" />

   </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
android:layout_marginTop="-10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/linearlay3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason:"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@string/font_family_medium"
                android:id="@+id/textView2"
                android:layout_below="@+id/leavestatus_toDate"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:text="Reason"
                android:textColor="@color/blck"
                android:gravity="start"
                android:textSize="15dp"
                android:fontFamily="@string/font_family_medium"
                android:maxLines="2"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reasonstatus"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/leavestatus_toDate"
                android:layout_alignStart="@+id/leavestatus_toDate" />

        </LinearLayout>
