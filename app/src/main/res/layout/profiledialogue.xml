<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="2dp">


         <TextView
             android:text="Emp Id:"
             android:layout_marginLeft="24dp"
             android:textSize="16dp"
             android:textStyle="bold"

             android:fontFamily="font_family_medium"
             android:textColor="@color/colorPrimary"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textviewempid"
             android:layout_alignBaseline="@+id/textView6"
             android:layout_alignBottom="@+id/textView6"
             android:layout_alignLeft="@+id/textfirstname"
             android:layout_alignStart="@+id/textfirstname" />


         <TextView
             android:text="emp id"
             android:layout_width="wrap_content"
             android:textSize="15dp"
             android:textColor="@color/blck"

             android:fontFamily="font_family_medium"
             android:layout_height="wrap_content"
             android:id="@+id/textemp_id"
             android:layout_marginLeft="40dp"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/firstname"
             android:layout_toEndOf="@+id/firstname" />


     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="2dp">

         <TextView
             android:text="Email:"
             android:layout_marginLeft="24dp"
             android:textSize="16dp"
             android:textStyle="bold"

             android:fontFamily="font_family_medium"
             android:textColor="@color/colorPrimary"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textview"
             android:layout_alignBaseline="@+id/textView6"
             android:layout_alignBottom="@+id/textView6"
             android:layout_alignLeft="@+id/textfirstname"
             android:layout_alignStart="@+id/textfirstname" />


         <TextView
             android:text="Email"
             android:textColor="@color/blck"

             android:layout_marginLeft="50dp"
             android:textSize="15dp"
             android:fontFamily="font_family_medium"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textemail"
             android:layout_alignBaseline="@+id/textView6"
             android:layout_alignBottom="@+id/textView6"
             android:layout_alignLeft="@+id/textfirstname"
             android:layout_alignStart="@+id/textfirstname" />




     </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="2dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Last Apply:"
             android:textColor="@color/colorPrimary"
             android:textSize="16dp"
             android:textStyle="bold"

             android:fontFamily="font_family_medium"
             android:id="@+id/last_apply"
             android:layout_marginLeft="24dp"
             android:layout_marginStart="24dp"
             android:layout_alignBaseline="@+id/textfirstname"
             android:layout_alignBottom="@+id/textfirstname"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />

         <TextView
             android:text="last apply"
             android:layout_width="wrap_content"
             android:textSize="15dp"
             android:textColor="@color/blck"

             android:layout_height="wrap_content"
             android:id="@+id/textdate"
             android:layout_marginLeft="14dp"
             android:fontFamily="font_family_medium"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/firstname"
             android:layout_toEndOf="@+id/firstname" />


     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="2dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Designation:"
             android:textColor="@color/colorPrimary"
             android:textSize="16dp"
             android:textStyle="bold"

             android:fontFamily="font_family_medium"
             android:id="@+id/role_emp"
             android:layout_marginLeft="24dp"
             android:layout_marginStart="24dp"
             android:layout_alignBaseline="@+id/textfirstname"
             android:layout_alignBottom="@+id/textfirstname"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />

         <TextView
             android:text="designation"
             android:layout_width="wrap_content"
             android:textSize="15dp"
             android:layout_height="wrap_content"
             android:id="@+id/textrole"
             android:textColor="@color/blck"

             android:layout_marginLeft="5dp"
             android:fontFamily="font_family_medium"
             android:layout_alignParentTop="true"
             android:layout_toRightOf="@+id/firstname"
             android:layout_toEndOf="@+id/firstname" />


     </LinearLayout>
 </LinearLayout>


</LinearLayout>