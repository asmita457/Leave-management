<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    android:id="@+id/profile_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/profilelinearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/place_holder"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>


    </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="10dp">


            <TextView
                android:text="First Name"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/textfirstname"
                android:layout_marginLeft="30dp"
                android:fontFamily="font_family_medium"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/firstname"
                android:layout_toEndOf="@+id/firstname" />

            <TextView
                android:text="Last Name"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:fontFamily="font_family_medium"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/textlastname"
                android:layout_alignBaseline="@+id/textfirstname"
                android:layout_alignBottom="@+id/textfirstname"
                android:layout_toRightOf="@+id/textfirstname"
                android:layout_toEndOf="@+id/textfirstname"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>

    </LinearLayout>
